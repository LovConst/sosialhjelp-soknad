<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>no.nav.sbl.soknadsosialhjelp</groupId>
        <artifactId>soknadsosialhjelp</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>soknadsosialhjelp-web</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>${project.artifactId}</name>
    <packaging>war</packaging>


    <properties>
        <skip.js-tests>false</skip.js-tests>
        <gulp.extra.test.parameter>--DUMMY</gulp.extra.test.parameter>
    </properties>

    <dependencies>
        <!-- CMS-DECORATOR AND MESSAGE BEAN -->
        <dependency>
            <groupId>no.nav.sbl</groupId>
            <artifactId>innholdshenter</artifactId>
        </dependency>

        <!-- OTHER DEPENDENCIES -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>no.nav.sbl.dialogarena</groupId>
            <artifactId>common-web</artifactId>
        </dependency>
        <dependency>
            <groupId>no.nav.sbl.dialogarena</groupId>
            <artifactId>common-types</artifactId>
        </dependency>
        <dependency>
            <groupId>no.nav.modig</groupId>
            <artifactId>modig-lang</artifactId>
        </dependency>

        <!-- TEST DEPENDENCIES -->
        <dependency>
            <groupId>no.nav.sbl.dialogarena</groupId>
            <artifactId>common-jetty</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
        </dependency>
        <dependency>
            <groupId>no.nav.sbl.dialogarena</groupId>
            <artifactId>common-test</artifactId>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/frontend-gammel/</directory>
                <excludes>
                    <exclude>**/node_modules/**</exclude>
                </excludes>
                <filtering>false</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.3.2</version>
                <executions>
                    <execution>
                        <id>npm install</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <executable>npm</executable>
                            <arguments>
                                <argument>install</argument>
                            </arguments>
                            <workingDirectory>src/frontend-gammel</workingDirectory>
                        </configuration>
                    </execution>

                    <execution>
                        <id>gulp build</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <executable>node</executable>
                            <arguments>
                                <argument>./node_modules/gulp/bin/gulp</argument>
                                <argument>--prod</argument>
                            </arguments>
                            <workingDirectory>src/frontend-gammel</workingDirectory>
                        </configuration>
                    </execution>

                    <execution>
                        <id>JS test</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>test</phase>
                        <configuration>
                            <executable>node</executable>
                            <arguments>
                                <argument>./node_modules/gulp/bin/gulp</argument>
                                <argument>test</argument>
                                <argument>${gulp.extra.test.parameter}</argument>
                            </arguments>
                            <skip>${skip.js-tests}</skip>
                            <workingDirectory>src/frontend-gammel</workingDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>run-browser-tests</id>
            <activation>
                <os>
                    <family>win</family>
                </os>
            </activation>
            <properties>
                <gulp.extra.test.parameter>--dev</gulp.extra.test.parameter>
            </properties>
        </profile>

        <profile>
            <id>dev-watch</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <gulpTask>watch</gulpTask>
            </properties>
        </profile>

        <profile>
            <id>sonar</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>

            <properties>
                <sonar.language>js</sonar.language>
                <sonar.coverage.exclusions>
                    src/frontend/app/js/**/*Spec.js,
                    src/frontend/app/js/app.js,
                    src/frontend/app/js/feilsiderRoutes.js,
                    src/frontend/app/js/navModules.js,
                    src/frontend/app/js/routes.js,
                    src/frontend/app/js/vendors.js,
                    src/frontend/app/js/init.js
                </sonar.coverage.exclusions>
                <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
                <sonar.sources>src/frontend/app</sonar.sources>
                <sonar.javascript.jstest.reportsPath>target/surefire-reports</sonar.javascript.jstest.reportsPath>
                <sonar.javascript.lcov.reportPath>target/karma-coverage/PhantomJS 1.9.7 (Linux 0.0.0)/lcov.info</sonar.javascript.lcov.reportPath>
                <skip.js-tests>false</skip.js-tests>
                <gulp.extra.test.parameter>--DUMMY</gulp.extra.test.parameter>
            </properties>
        </profile>
    </profiles>
</project>